{
  "name": "docs4ai",
  "version": "1.0.0",
  "description": "Cross-platform folder sync app with sqlite-vec for vector search",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npm run copy-locales",
    "copy-locales": "mkdir -p dist/locales && cp -r src/locales/*.json dist/locales/",
    "postinstall": "npx @electron/rebuild",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "rebuild": "npx @electron/rebuild",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "build": {
    "appId": "com.docs4ai.app",
    "productName": "Docs4ai",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/index.html",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets",
      "category": "Utility"
    },
    "icon": "assets/icon.png"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "electron-store": "^8.2.0",
    "express": "^4.21.0",
    "i18next": "^25.7.4",
    "i18next-fs-backend": "^2.6.1",
    "openai": "^4.77.0",
    "sqlite-vec": "^0.1.6"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/uuid": "^11.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "jest": "^30.2.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.6.3",
    "uuid": "^13.0.0"
  },
  "optionalDependencies": {
    "mammoth": "^1.8.0",
    "pdf-parse": "^1.1.1",
    "word-extractor": "^1.0.4"
  }
}
